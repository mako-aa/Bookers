<h1>Books</h1>

<body>
  <table>
    <% @lists.each do |list| %>
    <tr>
      <th class="nav-list">Title</th>
      <th class="nav-list">Body</th>
    </tr>
    <tr>
      <td class="table-list"><%= list.title %></td>
      <td class="table-list"><%= list.body %></td>
    
      <td><%= link_to "Show", list_path(list) %></td>
      <td><%= link_to "Edit", edit_list_path(list.id) %></td>
      <td><%= link_to "Destroy", list_path(list.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </table>
 
<h2>New book</h2>
<% if @list && @list.errors.any? %>
  <%= @list.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

</body>
