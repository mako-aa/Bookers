<h1>Books</h1>

<% @lists.each do |list| %>

  <p>Title</p>
  <span>
    <%= list.title %>
  </span>
  
  <p>Body</p>
  <span>
    <%= list.title %>
  </span>
  
  <%= link_to "Show", list_path(list) %>
  <%= link_to "Edit", edit_list_path(list.id) %>
  <%= link_to "Destroy", list_path(list.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
    
  
  
<% end %>

<h2>New book</h2>
<% if @list && @list.errors.any? %>
  <%= @list.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
