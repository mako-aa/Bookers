<div class="flash-message">
    <%= flash[:notice] %>
</div>
<h1>Books</h1>

<body>
  <table>

    <tr>
      <th class="nav-list">Title</th>
      <th class="nav-list">Body</th>
    </tr>
    <% @lists.each do |list| %>
    <tr>
      <td class="table-list"><%= list.title %></td>
      <td class="table-list"><%= list.body %></td>
    
      <td class="link"><%= link_to "Show", list_path(list) %></td>
      <td class="link"><%= link_to "Edit", edit_list_path(list.id) %></td>
      <td class="link"><%= link_to "Destroy", list_path(list.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </table>
 
  <h2>New book</h2>
  <% if @list && @list.errors.any? %>
    <div class="error-box">
      <div class="error-explanation">
        <%= @list.errors.count %> errors prohibited this book from being saved:
      </div>
        
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li class="error-list"><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <%= form_with model: @list, method: :post do |f| %>
    <div class="form">
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>
  
    <div class="form">
      <label>Body</label><br>
      <%= f.text_area :body %>
    </div>	
	
    <%= f.submit 'Create Book', class:'btn'%>
  <% end %>

</body>
